<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExperimentalShell.Views.MainView"
             xmlns:views="clr-namespace:ExperimentalShell.Views.Dogs"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             Title="MainView">
    <VerticalStackLayout>
        <Label 
        Text="Select an animal"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />

        <telerik:RadButton x:Name="DogsButton"
                       Text="Doggo's"
                       BackgroundColor="{StaticResource Primary}"
                       TextColor="White"
                       Command="{Binding ViewAnimalCommand}"
                       CommandParameter="{Type views:DogsView}"/>

        
    </VerticalStackLayout>
</ContentPage>