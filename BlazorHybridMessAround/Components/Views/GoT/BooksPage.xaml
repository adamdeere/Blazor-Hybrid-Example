<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlazorHybridMessAround.Components.Views.GoT.BooksPage"
             Title="G.o.T Books Page"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             xmlns:razorPages="clr-namespace:BlazorHybridMessAround.Components.Pages.GoT">

    <Grid RowDefinitions="*, auto">
        
   
        <BlazorWebView HostPage="wwwroot/index.html"
                       >
            
            <BlazorWebView.RootComponents>
                <RootComponent Selector="#app" 
                               ComponentType="{x:Type razorPages:GotBooksRazor}"
                               />
            </BlazorWebView.RootComponents>
        </BlazorWebView>
        
        <telerik:RadButton x:Name="HousesButton"
                    Text="Houses"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    Grid.Row="1"/>
    </Grid>

</ContentPage>